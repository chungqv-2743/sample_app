<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= render "layouts/head_default" %>
    <%= render "layouts/shim" %>
  </head>

  <body>
    <%= link_to "En", locale: :en %>
    <%= link_to "Vi", locale: :vi %>
    <%= render "layouts/header" %>
